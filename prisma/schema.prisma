generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id         Int           @id @default(autoincrement())
  firstName  String
  lastName   String
  joinedAt   DateTime
  birthDate  DateTime      // <-- DODAJ TO POLE
  position   String        // <-- jeÅ›li nie masz, dodaj
  fees       Fee[]
  stats      PlayerStats[]
}

model Fee {
  id          Int      @id @default(autoincrement())
  player      Player   @relation(fields: [playerId], references: [id])
  playerId    Int
  amount      Float
  paymentDate DateTime
  periodStart DateTime
  periodEnd   DateTime
}

model Match {
  id        Int      @id @default(autoincrement())
  date      DateTime
  opponent  String
  location  String
  stats     PlayerStats[]
}

model PlayerStats {
  id         Int     @id @default(autoincrement())
  player     Player  @relation(fields: [playerId], references: [id])
  playerId   Int
  match      Match   @relation(fields: [matchId], references: [id])
  matchId    Int
  goals      Int     @default(0)
  assists    Int     @default(0)
  yellowCards Int    @default(0)
  redCards   Int     @default(0)
}
